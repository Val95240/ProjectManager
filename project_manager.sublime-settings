{
    // A list of folders containing *.sublime-project files, e.g.,
    // "projects_path": ["path/to/custom/Projects", "another_path/to/Projects"]
    "projects_path": [],

    // Enable local projects directory, such a directory will be named as
    // "Projects - computer_name", where computer_name is your computer hostname.
    // It would be useful if Sublime Text settings are synced across different computers.
    "use_local_projects_dir": false,

    // Activate workspace management : if True, when opening a project with several
    // workspaces, ask which one to open
    "default_workspaces": true,

    // Windows/Linux only
    // close projecct when the window is closed
    "close_project_when_close_window": true,

    // Show recent projects first
    // if false, the projects are sorted alphabetically
    "show_recent_projects_first": true,

    // Show active projects first
    "show_active_projects_first": true,

    // Show default workspace (the one with the same name as the project) first
    "show_default_workspace_first": false,

    // Show recent workspaces first
    "show_recent_workspaces_first": true,

    // Move the most recent workspace to second place if the current window is from
    // the same project
    "show_most_recent_workspace_second": true,

    // The string to use as the active indicator for the project list.
    "active_project_indicator": "*",

    // How the projects in the project list should be formatted. Supported variables
    // are "project_name" and "active_project_indicator". For inactive projects
    // "active_project_indicator" will be an empty string.
    "project_display_format": "{project_name}{active_project_indicator}"
}
